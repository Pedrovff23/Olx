<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Olx" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Olx.Principal" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimaryDark">@color/roxo_escuro</item>
        <item name="colorPrimary">@color/roxo_claro</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="Theme.Olx.CadastroAnuncio" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimaryDark">@color/roxo_escuro</item>
        <item name="colorPrimary">@color/roxo_claro</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/white</item>
    </style>
    
    <style name="botaoPadrao" parent="Theme.AppCompat.Light">
        
        <item name="colorControlHighlight">#d500f9</item>
        <item name="colorButtonNormal">@color/roxo_claro</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>