            android:layout_height="wrap_content"
            android:text="|"
            android:textColor="#757575"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/buttonCategora"
            style="?attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
